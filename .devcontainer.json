{
  "name": "Go Development",
  "image": "mcr.microsoft.com/devcontainers/go:latest",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens"
      ]
    }
  },
  "forwardPorts": [8080],
  "postCreateCommand": "go version",
  "remoteUser": "vscode"
}
